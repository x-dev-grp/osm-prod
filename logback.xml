<configuration>

    <!-- Console appender with banner -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Pattern with banner preserved at the beginning of each log -->
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss} %5p [%t] %logger{1} %m%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Banner configuration (optional) -->
    <logger name="org.springframework.boot" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>
